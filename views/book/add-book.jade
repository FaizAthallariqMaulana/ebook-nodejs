extends ../layout/base
block content
    section.content-header
        h1
            | Add Buku
            small it all starts here
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
                li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Buku
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/books/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Judul
                                    input(type='text',value='#{judul}',name='judul',placeholder='Enter Judul', autofocus).form-control
                                .form-group
                                    label
                                        | Pengarang
                                    input(type='text',name='pengarang',placeholder='Enter Pengarang').form-control
                                .form-group
                                    label
                                        | Penerbit
                                    input(type='text',value='#{penerbit}',name='penerbit',placeholder='Enter Penerbit').form-control
                                .form-group
                                    label
                                        | Gambar
                                    input(type='text',name='gambar',placeholder='Enter Gambar').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/books').btn.btn-primary.pull-right
                                    | Back