extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Buku
			small menu for editing buku data
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Buku
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/books/edit/#{(id==undefined) ? data.id : id}')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Judul
									input(type='text',value="#{data.judul}",name='judul',placeholder='Enter Judul', autofocus).form-control
								.form-group
									label
										| Pengarang
									input(type='text',value="#{ (pengarang == undefined) ? data.pengarang : pengarang }",name='pengarang',placeholder='Enter Pengarang').form-control
								.form-group
									label
										| Penerbit
									input(type='text',value="#{ (penerbit == undefined) ? data.penerbit : penerbit }",name='penerbit',placeholder='Enter Penerbit').form-control
								.form-group
									label
										| Gambar
									input(type='text',value="#{ (gambar == undefined) ? data.gambar : gambar }",name='gambar',placeholder='Enter Gambar').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/books').btn.btn-primary.pull-right
									| Back